<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC6C6"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:background="#CDC9C9"
        android:layoutDirection="ltr"
        android:tint="#000000"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="#CDC9C9"
        android:tint="#434242"
        app:srcCompat="@android:drawable/ic_dialog_dialer"
        tools:layout_editor_absoluteX="353dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/view"
        android:layout_width="366dp"
        android:layout_height="352dp"
        android:background="#A6A3A3"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="182dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:background="#F6F5F5"
        android:ems="10"
        android:hint="البريد الالكتروني"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:text="سجل دخولك "
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="178dp"
        android:layout_height="58dp"
        android:background="#8C8987"
        android:text="تسجيل الدخول"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="453dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:background="#F8F3F3"
        android:ems="10"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        android:textAlignment="viewEnd"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="371dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/twaq"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:text="الحساب الشخصي"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="98dp" />

</androidx.constraintlayout.widget.ConstraintLayout>